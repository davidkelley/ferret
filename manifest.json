{
  "manifest_version": 2,

  "name": "@@title",

  "version": "@@version",

  "description": "@@description",

  "homepage_url": "@@homepage",

  "default_locale": "en",

  "offline_enabled": true,

  "minimum_chrome_version": "25",

  "background": {
    "scripts": [
      "libs.js",
      "main.js"
    ],
    "persistent": false
  },

  "permissions": ["usb", "fileSystem"],

  "optional_permissions": [ 
    @@devices
  ]

}
