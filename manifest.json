{
  "manifest_version": 2,

  "name": "Ferret",

  "description": "Chrome Extension, providing an API for communicating with peripheral devices.",

  "default_locale": "en",

  "version": "0.0.1",

  "offline_enabled": true,

  "minimum_chrome_version": "25",

  "background": {
    "scripts": [
      "libs.js",
      "main.js"
    ],
    "persistent": false
  },

  "permissions": ["usb", "fileSystem"],

  "optional_permissions": [ 
    { "usbDevices": 
      [
        {"vendorId": "04B8", "productId": "0202"},
        {"vendorId": "04B8", "productId": "0E03"},
      ]
    }
  ]

}
